<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mama">

    <!-- ============================================== -->
    <!--                 PERMISSIONS                    -->
    <!-- ============================================== -->

    <!-- Réseau & Localisation -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Système & Notifications (TES ajouts) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Matériel & Capteurs (AJOUTS de l'équipe) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mama"
        tools:targetApi="31">

        <!-- ========================================== -->
        <!--           ACTIVITÉS PRINCIPALES            -->
        <!-- ========================================== -->

        <!-- SPLASH SCREEN (Démarrage) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LOGIN -->
        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ForgotPasswordActivity" />

        <!-- DASHBOARD -->
        <activity android:name=".HomeDashboardActivity" />

        <!-- Ancienne activité (gardée par sécurité) -->
        <activity android:name=".MainActivity" />

        <!-- ========================================== -->
        <!--              TES FONCTIONNALITÉS           -->
        <!-- ========================================== -->
        <activity android:name=".EmergencyActivity" />
        <activity android:name=".AppointmentsActivity" />
        <activity android:name=".ChatActivity" />

        <receiver android:name=".NotificationReceiver" />

        <!-- ========================================== -->
        <!--        FONCTIONNALITÉS NUTRITION (Rayen)   -->
        <!-- ========================================== -->
        <activity android:name=".Nutrition.MainActivity" />
        <activity android:name=".Nutrition.AddMealActivity" />
        <activity android:name=".Nutrition.EditMealActivity" />
        <activity android:name=".Nutrition.AnalysisActivity" />
        <activity android:name=".Nutrition.BarcodeScannerActivity" />
        <activity android:name=".Nutrition.ProductDetailsActivity" />
        <activity android:name=".Nutrition.WaterTrackerActivity" />

        <receiver
            android:name=".Nutrition.MealReminderReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".Nutrition.WaterActionReceiver"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".Nutrition.WaterReminderService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse"
            tools:ignore="ForegroundServicePermission" />

        <!-- ========================================== -->
        <!--        FONCTIONNALITÉS SANTÉ (Nessim)      -->
        <!-- ========================================== -->
        <activity android:name=".HealthActivity" />
        <activity android:name=".HealthTrackerActivity" />
        <activity android:name=".SymptomsActivity" />
        <activity android:name=".NutritionActivity" />
        <activity android:name=".ActivityWeatherActivity" />
        <activity android:name=".SleepTrackingActivity" />
        <activity android:name=".RecordingsActivity" />
        <activity android:name=".WeeklyInfoActivity" />

        <service
            android:name=".SleepTrackingService"
            android:foregroundServiceType="microphone"
            android:exported="false" />

        <!-- ========================================== -->
        <!--        FONCTIONNALITÉS SPORT (Moatez)      -->
        <!-- ========================================== -->
        <activity android:name=".sport.SportDashboardActivity" />
        <activity android:name=".sport.HistoryActivity" />
        <activity android:name=".sport.ExercisesActivity" /> <!-- AJOUTÉ DE LA DROITE -->

    </application>

</manifest>