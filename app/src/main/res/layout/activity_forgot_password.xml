<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/mama_bg"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réinitialisation"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/mama_primary"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrez votre email pour vérifier votre compte."
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- ÉTAPE 1 : EMAIL -->
    <EditText
        android:id="@+id/etResetEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Votre Email"
        android:inputType="textEmailAddress"
        android:background="@android:drawable/editbox_background_normal"
        android:paddingStart="15dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnCheckEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Vérifier Email"
        android:backgroundTint="@color/mama_primary"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"/>

    <!-- ÉTAPE 2 : NOUVEAU PASSWORD (Caché au début) -->
    <LinearLayout
        android:id="@+id/layoutResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"> <!-- gone = invisible -->

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Nouveau mot de passe"
            android:inputType="textPassword"
            android:background="@android:drawable/editbox_background_normal"
            android:paddingStart="15dp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Confirmer mot de passe"
            android:inputType="textPassword"
            android:background="@android:drawable/editbox_background_normal"
            android:paddingStart="15dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Mettre à jour"
            android:backgroundTint="#4CAF50"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>