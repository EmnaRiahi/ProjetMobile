<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_health"
    tools:context=".sante.HealthActivity">

    <!-- HEADER with Welcome Message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’• Suivi de SantÃ©"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prenez soin de vous et de bÃ©bÃ©"
            android:textSize="16sp"
            android:textColor="@color/grey_text"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <!-- CONTENU -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Carte pour le suivi du poids et de la tension -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeightTracker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_weight"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <!-- Icon Container -->
                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_stat_badge">

                        <ImageView
                            android:id="@+id/iconWeight"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_weight_tracker"
                            app:tint="@color/sante_coral"/>
                    </FrameLayout>

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/titleWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š Journal Poids &amp; Tension"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suivez votre Ã©volution semaine par semaine"
                            android:textColor="@color/grey_text"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/grey_text"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Carte pour les informations hebdomadaires -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeeklyInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_weekly"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <!-- Icon Container -->
                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_stat_badge">

                        <ImageView
                            android:id="@+id/iconInfo"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_weekly_info"
                            app:tint="@color/sante_mint"/>
                    </FrameLayout>

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/titleInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ± Infos de la Semaine"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DÃ©couvrez le dÃ©veloppement de votre bÃ©bÃ©"
                            android:textColor="@color/grey_text"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Arrow -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/grey_text"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Carte pour l'analyse du sommeil -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSleepTracker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_sleep"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Icon Container -->
                        <FrameLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_stat_badge">

                            <ImageView
                                android:id="@+id/iconSleep"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_sleep_tracker"
                                app:tint="@color/sante_lavender"/>
                        </FrameLayout>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/titleSleep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ™ Analyse du Sommeil"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>

                            <TextView
                                android:id="@+id/textViewSleepDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Suivez la qualitÃ© de vos nuits"
                                android:textColor="@color/grey_text"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Arrow -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/grey_text"/>
                    </LinearLayout>

                    <!-- Recordings Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSleepRecordings"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="ðŸŽ™ï¸ Ã‰couter les enregistrements"
                        android:textSize="13sp"
                        android:textAllCaps="false"
                        android:layout_marginTop="12dp"
                        app:cornerRadius="20dp"
                        app:backgroundTint="@color/sante_lavender"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tip Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_insight_bg"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="ðŸ’¡"
                        android:textSize="24sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Un bon sommeil favorise le dÃ©veloppement de bÃ©bÃ©. Pensez Ã  vous reposer !"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>