<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 1. EN-TÊTE DÉCORATIF -->
    <View
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/mama_primary"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bonjour, Future Maman"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semaine 12 de grossesse"
        android:textSize="16sp"
        android:textColor="#E0E0E0"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/tvHello"
        app:layout_constraintTop_toBottomOf="@+id/tvHello"/>

    <!-- 2. GRILLE DES FONCTIONNALITÉS -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWeek"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:padding="16dp"
            android:alignmentMode="alignMargins">

            <!-- MODULE 1 : URGENCE -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEmergency"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFEBEE">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_call"
                        app:tint="#D32F2F"
                        android:layout_marginBottom="10dp"/>

                    <!-- CORRECTION : AJOUT DE WIDTH/HEIGHT -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="URGENCE"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Secouez !)"
                        android:textSize="10sp"
                        android:textColor="#D32F2F"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- MODULE 2 : RENDEZ-VOUS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRdv"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="@color/mama_primary"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rendez-vous"
                        android:textStyle="bold"
                        android:textColor="#333"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- MODULE 3 : SANTÉ & CONSTANTES -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardHealth"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="@color/mama_accent"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Santé &amp; Info"
                        android:textStyle="bold"
                        android:textColor="#333"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- MODULE 4 : SYMPTÔMES -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSymptoms"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_report_image"
                        app:tint="#FF9800"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Symptômes"
                        android:textStyle="bold"
                        android:textColor="#333"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- MODULE 5 : ACTIVITÉ & MÉTÉO -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardActivityWeather"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_day"
                        app:tint="#03A9F4"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sport &amp; Météo"
                        android:textStyle="bold"
                        android:textColor="#333"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- MODULE 6 : NUTRITION -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardNutrition"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        app:tint="#4CAF50"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nutrition"
                        android:textStyle="bold"
                        android:textColor="#333"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>

    <!-- Bouton Déconnexion -->
    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_lock_power_off"
        android:background="@drawable/circle_white_bg"
        android:elevation="10dp"
        app:tint="#757575"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>