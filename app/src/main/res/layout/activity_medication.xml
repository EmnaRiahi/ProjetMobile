<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- En-tête -->
    <LinearLayout
        android:id="@+id/headerMeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/gradient_medication"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitleMeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MÉDICAMENTS"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suivi santé"
                android:textColor="#E1F5FE"
                android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewTimetable"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:paddingHorizontal="8dp"
                app:icon="@android:drawable/ic_menu_today"
                app:iconTint="#FFFFFF"
                app:iconPadding="0dp"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewStats"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:paddingHorizontal="8dp"
                app:icon="@android:drawable/ic_menu_sort_by_size"
                app:iconTint="#FFFFFF"
                app:iconPadding="0dp"
                android:textColor="#FFFFFF"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewAI"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:paddingHorizontal="8dp"
                app:icon="@android:drawable/ic_menu_info_details"
                app:iconTint="#FFFFFF"
                app:iconPadding="0dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

    <!-- LISTE DES MÉDICAMENTS (C'est ici qu'il manquait l'ID) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMeds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/headerMeds"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"/>

    <!-- Bouton Ajouter (+) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="@color/white"
        app:backgroundTint="@color/mama_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>