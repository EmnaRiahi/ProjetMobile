<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card_sleep"
    tools:context=".sante.SleepTrackingActivity">

    <!-- HEADER with Moon Theme -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ™ Analyse du Sommeil"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dormez bien pour vous et bÃ©bÃ© ðŸ’¤"
                android:textSize="14sp"
                android:textColor="@color/grey_text"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- MAIN CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Toggle Button Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="90dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="16dp">

                <ToggleButton
                    android:id="@+id/toggleButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_sleep_toggle"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textOn="â¹ï¸ STOP"
                    android:textOff="â–¶ï¸ START"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Status Text -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appuyez sur START pour commencer le suivi"
                android:textColor="@color/grey_text"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"/>

            <!-- RESULTS CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resultsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Results Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ¨ RÃ©sultats de la nuit"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp"/>

                    <!-- Stats Grid -->
                    <GridLayout
                        android:id="@+id/tvResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="true">

                        <!-- Total Duration -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_stat_item">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_stat_badge">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_time"
                                    app:tint="@color/sante_coral"/>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/tvTotalDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                tools:text="8h 15m\nTotal"/>
                        </LinearLayout>

                        <!-- Deep Sleep -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_stat_item">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_stat_badge">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_sleep_deep"
                                    app:tint="@color/sante_lavender"/>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/tvDeepSleep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                tools:text="6h 30m\nProfond"/>
                        </LinearLayout>

                        <!-- Light Sleep -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_stat_item">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_stat_badge">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_sleep_light"
                                    app:tint="@color/sante_soft_blue"/>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/tvLightSleep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                tools:text="1h 45m\nLÃ©ger"/>
                        </LinearLayout>

                        <!-- Sound Events -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_stat_item">

                            <FrameLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_stat_badge">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_sound_event"
                                    app:tint="@color/status_alert"/>
                            </FrameLayout>

                            <TextView
                                android:id="@+id/tvSoundEventsResult"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                tools:text="12\nSons dÃ©tectÃ©s"/>
                        </LinearLayout>

                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recordings Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnListenRecordings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸŽ™ï¸ Ã‰couter les enregistrements"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_marginTop="24dp"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/sante_lavender"
                android:textColor="@color/white"
                app:icon="@drawable/ic_sound_event"
                app:iconTint="@color/white"
                app:iconGravity="textStart"/>

            <!-- Sleep Tip -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_insight_bg"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="ðŸ˜´"
                        android:textSize="24sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Posez votre tÃ©lÃ©phone prÃ¨s du lit pour un meilleur suivi du sommeil"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
