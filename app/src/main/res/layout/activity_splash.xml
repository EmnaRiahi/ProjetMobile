<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mama_primary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <!-- TON LOGO (Ici j'utilise le robot, mais tu peux mettre ce que tu veux) -->
        <ImageView
            android:id="@+id/logo_splash"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_mamabot"
            android:background="@drawable/circle_white_bg"
            android:padding="20dp"
            android:layout_marginBottom="20dp"/>
        <!-- Si tu n'as pas ic_mamabot, mets @mipmap/ic_launcher_round -->

        <!-- NOM DE L'APPLICATION -->
        <TextView
            android:id="@+id/tv_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mama"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="cursive"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votre compagnon grossesse"
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:letterSpacing="0.1"/>

    </LinearLayout>

    <!-- Version en bas -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>